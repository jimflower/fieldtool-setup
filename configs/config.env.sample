# ---- FieldTool defaults (edit as needed) ----
# Interfaces
AP_IF="wlan0"             # Pi AP side
LAN_IF="eth0"
WLAN1_IF="wlan1"          # Uplink Wi-Fi (if you have a USB Wi-Fi dongle)

# AP network
AP_ADDR="10.99.0.1/24"
AP_NET="10.99.0.0/24"
AP_GW="10.99.0.1"
DNS_SERVERS="1.1.1.1,8.8.8.8"

# Discover / tooling
DEFAULT_SCAN_IF="$LAN_IF"
NMAP_PING_OPTS="-sn"
ARP_SCAN_OPTS="--retry=3 --timeout=200"
SERIAL_BAUD_XL1000="115200"
XL1000_TTY_GLOB="/dev/serial/by-id/*FTDI*if00*"

# Bridge defaults
BRIDGE_IN_IF="$AP_IF"
BRIDGE_OUT_IF="$LAN_IF"
