#!/usr/bin/env bash
[ -f /opt/fieldtool/config.env ] && . /opt/fieldtool/config.env || true
set -uo pipefail
S="/opt/fieldtool/scripts/wlan1-net"
act="${1:-status}"; pass="${2:-}"
if [ -n "$pass" ]; then out="$("$S" "$act" "$pass" 2>&1 || true)"; else out="$("$S" "$act" 2>&1 || true)"; fi
printf "%s\n" "$out"
read -rp "Enter to continue..." _
exit 0
